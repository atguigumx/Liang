    <application
        android:name=".common.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/cangku"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.GoodsListActivity" />
        <activity android:name=".activity.GoodsInfoActivity" />
        <activity android:name=".activity.WebViewActivity" />
        <activity android:name=".activity.MasterItemActivity" />
        <activity android:name=".activity.BrandInfoActivity" />
        <activity android:name=".activity.MGZActivity" />
