<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_master_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#404040"
    tools:context="com.maxin.liang.activity.MasterItemActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/black"
        >
        <ImageView
            android:layout_marginTop="3dp"
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/actionbar_navigation_back"
            android:layout_marginLeft="15dp"

            />
        <TextView
            android:layout_toRightOf="@+id/iv_title_back"
            android:gravity="center"
            android:id="@+id/tv_master_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
             <ImageView
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginBottom="10dp"
                 android:id="@+id/iv_master_photo"
                 android:layout_width="80dp"
                 android:layout_height="80dp" />
              <TextView
                  android:layout_toRightOf="@+id/iv_master_photo"
                  android:id="@+id/tv_master_name2"
                  android:text="山本耀司"
                  android:layout_marginTop="10dp"
                  android:textColor="@android:color/white"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
               <TextView
                   android:layout_below="@+id/tv_master_name2"
                   android:layout_toRightOf="@+id/iv_master_photo"
                   android:textColor="@android:color/white"
                   android:text="日本时装设计师"
                    android:id="@+id/tv_master_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:text="关注"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_guanzhu"
                    android:layout_width="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="40dp" />
                <Button
                    android:text="私信"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_sixin"
                    android:layout_toRightOf="@+id/btn_guanzhu"
                    android:layout_marginBottom="10dp"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/indictor_master"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/StyledIndicators1"
            android:visibility="gone"
            ></com.viewpagerindicator.TabPageIndicator>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_master"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>
