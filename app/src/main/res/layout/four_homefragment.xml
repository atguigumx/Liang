<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/fourhome_one"
        android:layout_width="190dp"
        android:layout_height="200dp" />
    <ImageView
        android:scaleType="fitXY"
        android:layout_below="@+id/fourhome_one"
        android:id="@+id/fourhome_two"
        android:layout_width="190dp"
        android:layout_height="150dp" />
    <ImageView
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/fourhome_one"
        android:id="@+id/fourhome_three"
        android:layout_width="190dp"
        android:layout_height="150dp" />
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/fourhome_four"
        android:layout_toRightOf="@+id/fourhome_two"
        android:layout_below="@+id/fourhome_three"
        android:layout_width="190dp"
        android:layout_height="200dp" />
</RelativeLayout>