<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tui_jian_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.maxin.liang.activity.tuijian.TuiJianVideoInfoActivity">
    <uk.co.senab.photoview.PhotoView
        android:scaleType="center"
        android:id="@+id/jcv_infovideoplayer"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical" />
    <TextView
        android:layout_marginBottom="10dp"
        android:text="社会我乔哥,菜香话不多"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/info_text"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/info_playcount"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/info_zan"
            android:text="173赞"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/info_date"
            android:text="0714 0836"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/info_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
